{
  "NLog": {
    "internalLogLevel": "Info",
    "internalLogFile": "${currentdir}/Logs/System.log",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" }
    ],
    "targets": {
      "allfile": {
        "type": "File",
        "fileName": "${currentdir}/Logs/${date:format=yyyy-MM}/${date:format=yyyy-MM-dd}.log",
        "layout": "${longdate} -- [${uppercase:${level}}] -- ${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "allfile"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": "true"
      }
    ]
  }
}
